{
  "metadata": {
    "schemaVersion": "1.0",
    "importType": "LEX",
    "importFormat": "JSON"
  },
  "resource": {
    "name": "ChuckBot",
    "version": "1",
    "intents": [
      {
        "name": "ChuckNorrisFacts",
        "version": "3",
        "fulfillmentActivity": {
          "type": "CodeHook",
          "codeHook": {
            "uri": "arn:aws:lambda:us-west-2:244958302947:function:ChatQLReact-ChuckBot-ZIX1GZKG3SR1",
            "messageVersion": "1.0"
          }
        },
        "sampleUtterances": [
          "Give me a Chuck Norris fact",
          "Give me a Chuck Norris {FactType} fact"
        ],
        "slots": [
          {
            "name": "FactType",
            "slotConstraint": "Required",
            "slotType": "FactTypes",
            "slotTypeVersion": "1",
            "valueElicitationPrompt": {
              "messages": [
                {
                  "contentType": "PlainText",
                  "content": "What kind of fact? (Software Development, Movies, Science, Music or Food)"
                }
              ],
              "maxAttempts": 2,
              "responseCard": "{\"version\":1,\"contentType\":\"application/vnd.amazonaws.card.generic\",\"genericAttachments\":[{\"imageUrl\":\"https://i.imgflip.com/1octba.jpg\",\"subTitle\":\"Choose the category:\",\"title\":\"Chuck Norris Facts\",\"buttons\":[{\"text\":\"Software Development\",\"value\":\"Software Development\"},{\"text\":\"Science\",\"value\":\"Science\"},{\"text\":\"Movies\",\"value\":\"Movies\"},{\"text\":\"Music\",\"value\":\"Music\"},{\"text\":\"Food\",\"value\":\"Food\"}]}]}"
            },
            "priority": 1,
            "sampleUtterances": []
          }
        ],
        "conclusionStatement": {
          "messages": [
            {
              "contentType": "PlainText",
              "content": "For more facts, just click on my name in the dropdown.",
              "groupNumber": 1
            }
          ]
        }
      }
    ],
    "slotTypes": [
      {
        "description": "Available Chuck Norris Facts",
        "name": "FactTypes",
        "version": "1",
        "enumerationValues": [
          {
            "value": "Travel",
            "synonyms": []
          },
          {
            "value": "Money",
            "synonyms": []
          },
          {
            "value": "Software Development",
            "synonyms": []
          },
          {
            "value": "Celebrities",
            "synonyms": []
          },
          {
            "value": "Music",
            "synonyms": []
          },
          {
            "value": "Science",
            "synonyms": []
          },
          {
            "value": "Movies",
            "synonyms": []
          },
          {
            "value": "History",
            "synonyms": []
          },
          {
            "value": "Career",
            "synonyms": []
          },
          {
            "value": "Food",
            "synonyms": []
          }
        ],
        "valueSelectionStrategy": "ORIGINAL_VALUE"
      }
    ],
    "voiceId": "Matthew",
    "childDirected": false,
    "locale": "en-US",
    "idleSessionTTLInSeconds": 300,
    "clarificationPrompt": {
      "messages": [
        {
          "contentType": "PlainText",
          "content": "Please try something like: \\[@chuckbot Give me a Chuck Norris fact\\]"
        }
      ],
      "maxAttempts": 2
    },
    "abortStatement": {
      "messages": [
        {
          "contentType": "PlainText",
          "content": "Sorry, I am not able to assist at this time"
        }
      ]
    }
  }

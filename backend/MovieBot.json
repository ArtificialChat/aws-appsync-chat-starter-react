{
  "metadata": {
    "schemaVersion": "1.0",
    "importType": "LEX",
    "importFormat": "JSON"
  },
  "resource": {
    "name": "MovieBot",
    "version": "1",
    "intents": [
      {
        "name": "Movies",
        "version": "9",
        "fulfillmentActivity": {
          "type": "CodeHook",
          "codeHook": {
            "uri": "arn:aws:lambda:us-west-2:244958302947:function:ChatQLReact-MovieBot-13YMHXQK7KPXB",
            "messageVersion": "1.0"
          }
        },
        "sampleUtterances": [
          "Tell me about a movie",
          "Tell me about {name}",
          "Tell me {summary} about {name}",
          "{name}",
          "{name} {summary}"
        ],
        "slots": [
          {
            "name": "name",
            "slotConstraint": "Required",
            "slotType": "AMAZON.Movie",
            "valueElicitationPrompt": {
              "messages": [
                {
                  "contentType": "PlainText",
                  "content": "What movie do you want to know about?"
                }
              ],
              "maxAttempts": 2
            },
            "priority": 1,
            "sampleUtterances": []
          },
          {
            "name": "summary",
            "slotConstraint": "Optional",
            "slotType": "MovieDetails",
            "slotTypeVersion": "1",
            "valueElicitationPrompt": {
              "messages": [
                {
                  "contentType": "PlainText",
                  "content": "What information are you looking for? (Year, Plot, All)"
                }
              ],
              "maxAttempts": 2,
              "responseCard": "{\"version\":1,\"contentType\":\"application/vnd.amazonaws.card.generic\",\"genericAttachments\":[]}"
            },
            "priority": 2,
            "sampleUtterances": []
          }
        ],
        "conclusionStatement": {
          "messages": [
            {
              "contentType": "PlainText",
              "content": "Hope that was useful! Click the link to view more info on IMDB. For another movie, just type \\&quot;\\@moviebot \\&lt;Movie Name\\&gt;\\&quot; or send a movie name and click on my name in the dropdown",
              "groupNumber": 1
            }
          ]
        }
      }
    ],
    "slotTypes": [
      {
        "name": "MovieDetails",
        "version": "1",
        "enumerationValues": [
          {
            "value": "Year",
            "synonyms": []
          },
          {
            "value": "Voting",
            "synonyms": []
          },
          {
            "value": "Plot",
            "synonyms": []
          },
          {
            "value": "Director",
            "synonyms": []
          },
          {
            "value": "Actors",
            "synonyms": []
          }
        ],
        "valueSelectionStrategy": "ORIGINAL_VALUE"
      }
    ],
    "voiceId": "Matthew",
    "childDirected": false,
    "locale": "en-US",
    "idleSessionTTLInSeconds": 300,
    "clarificationPrompt": {
      "messages": [
        {
          "contentType": "PlainText",
          "content": "Please try something like: \\[@moviebot Tell me about a movie\\], \\[@moviebot Tell me about \\[Movie\\]\\], \\[@moviebot \\[Movie\\] \\[Plot\\]\\], \\[@moviebot \\[Movie\\] \\[Year\\]\\] or even just \\[@moviebot \\[Movie\\]\\]"
        }
      ],
      "maxAttempts": 5
    },
    "abortStatement": {
      "messages": [
        {
          "contentType": "PlainText",
          "content": "Sorry, I could not understand. Goodbye."
        }
      ]
    }
  }
}